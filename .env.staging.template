# Staging Environment Configuration Template
# Copy this file to .env.staging and fill in the actual values

# Application Configuration
APP_NAME="Restant Staging"
APP_ENV=staging
APP_KEY=                                    # Generate with: php artisan key:generate
APP_DEBUG=true
APP_URL=https://restant.staging.susankshakya.com.np

# Database Configuration
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=restant_staging
DB_USERNAME=                               # Database username
DB_PASSWORD=                               # Database password

# Cache Configuration
CACHE_DRIVER=redis
SESSION_DRIVER=redis
QUEUE_CONNECTION=redis

# Redis Configuration
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# Mail Configuration (Use log driver for staging)
MAIL_MAILER=log

# Monitoring Configuration
SENTRY_ENABLED=true
SENTRY_LARAVEL_DSN=                        # Sentry DSN (REQUIRED)
SENTRY_TRACES_SAMPLE_RATE=1.0              # Full tracing in staging

FLAGSMITH_ENABLED=true
FLAGSMITH_API_URL=https://flagsmith.susankshakya.com.np/api/v1/
FLAGSMITH_ENVIRONMENT_KEY=                 # Flagsmith environment key (REQUIRED)

GRAFANA_ENABLED=true
GRAFANA_CLOUD_INSTANCE_ID=                 # Grafana Cloud instance ID
GRAFANA_CLOUD_API_KEY=                     # Grafana Cloud API key

# Deployment Configuration
DOKKU_APP_NAME=restant-staging
GIT_BRANCH=staging

# Security Configuration (Relaxed for staging)
SESSION_SECURE_COOKIE=true
SESSION_SAME_SITE_COOKIE=lax

# Performance Configuration (Disabled for debugging)
OPCACHE_ENABLE=0
VIEW_CACHE=false
CONFIG_CACHE=false
ROUTE_CACHE=false

# Logging Configuration
LOG_CHANNEL=stack
LOG_LEVEL=debug
LOG_DEPRECATIONS_CHANNEL=null

# Development Tools (Enabled for staging)
TELESCOPE_ENABLED=true
DEBUGBAR_ENABLED=true