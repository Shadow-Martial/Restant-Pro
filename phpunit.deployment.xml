<?xml version="1.0" encoding="UTF-8"?>
<phpunit backupGlobals="false"
         backupStaticAttributes="false"
         bootstrap="vendor/autoload.php"
         colors="true"
         convertErrorsToExceptions="true"
         convertNoticesToExceptions="true"
         convertWarningsToExceptions="true"
         processIsolation="false"
         stopOnFailure="false"
         verbose="true">
    <testsuites>
        <testsuite name="Deployment Unit Tests">
            <directory suffix="Test.php">./tests/Unit</directory>
            <file>./tests/Unit/DeploymentConfigurationTest.php</file>
            <file>./tests/Unit/DeploymentValidationTest.php</file>
        </testsuite>

        <testsuite name="Deployment Integration Tests">
            <directory suffix="Test.php">./tests/Integration</directory>
            <file>./tests/Integration/MonitoringServicesIntegrationTest.php</file>
            <file>./tests/Integration/DeploymentWorkflowIntegrationTest.php</file>
        </testsuite>

        <testsuite name="Deployment Feature Tests">
            <file>./tests/Feature/EndToEndDeploymentTest.php</file>
            <file>./tests/Feature/DeploymentRollbackTest.php</file>
            <file>./tests/Feature/DeploymentNotificationTest.php</file>
            <file>./tests/Feature/DeploymentHealthCheckTest.php</file>
            <file>./tests/Feature/EnvironmentConfigurationTest.php</file>
            <file>./tests/Feature/FlagsmithIntegrationTest.php</file>
            <file>./tests/Feature/GrafanaCloudIntegrationTest.php</file>
            <file>./tests/Feature/DeploymentTestSuite.php</file>
        </testsuite>

        <testsuite name="All Deployment Tests">
            <directory suffix="Test.php">./tests/Unit</directory>
            <directory suffix="Test.php">./tests/Integration</directory>
            <file>./tests/Feature/EndToEndDeploymentTest.php</file>
            <file>./tests/Feature/DeploymentRollbackTest.php</file>
            <file>./tests/Feature/DeploymentNotificationTest.php</file>
            <file>./tests/Feature/DeploymentHealthCheckTest.php</file>
            <file>./tests/Feature/EnvironmentConfigurationTest.php</file>
            <file>./tests/Feature/FlagsmithIntegrationTest.php</file>
            <file>./tests/Feature/GrafanaCloudIntegrationTest.php</file>
            <file>./tests/Feature/DeploymentTestSuite.php</file>
        </testsuite>
    </testsuites>

    <filter>
        <whitelist processUncoveredFilesFromWhitelist="true">
            <directory suffix=".php">./app/Services</directory>
            <directory suffix=".php">./app/Console/Commands</directory>
            <directory suffix=".php">./app/Events</directory>
            <directory suffix=".php">./app/Listeners</directory>
            <directory suffix=".php">./app/Http/Middleware</directory>
            <file>./config/deployment.php</file>
            <file>./config/sentry.php</file>
            <file>./config/flagsmith.php</file>
        </whitelist>
    </filter>

    <php>
        <env name="APP_ENV" value="testing"/>
        <env name="BCRYPT_ROUNDS" value="4"/>
        <env name="CACHE_DRIVER" value="array"/>
        <env name="MAIL_MAILER" value="array"/>
        <env name="PULSE_ENABLED" value="false"/>
        <env name="QUEUE_CONNECTION" value="sync"/>
        <env name="SESSION_DRIVER" value="array"/>
        <env name="DB_CONNECTION" value="sqlite"/>
        <env name="DB_DATABASE" value=":memory:"/>
        
        <!-- Deployment Testing Configuration -->
        <env name="DEPLOYMENT_TESTING" value="true"/>
        <env name="SENTRY_ENABLED" value="true"/>
        <env name="SENTRY_LARAVEL_DSN" value="https://eb01fe83d3662dd65aee15a185d4308c@o4509937918738432.ingest.de.sentry.io/4509938290327632"/>
        <env name="SENTRY_TRACES_SAMPLE_RATE" value="0.1"/>
        <env name="FLAGSMITH_ENABLED" value="false"/>
        <env name="GRAFANA_ENABLED" value="false"/>
        <env name="DEPLOYMENT_NOTIFICATIONS_ENABLED" value="false"/>
        
        <!-- Mock External Services -->
        <env name="MOCK_EXTERNAL_SERVICES" value="true"/>
        <env name="MOCK_DOKKU_COMMANDS" value="true"/>
        <env name="MOCK_HTTP_REQUESTS" value="true"/>
        
        <!-- Test Configuration -->
        <env name="DEPLOYMENT_TEST_DOKKU_HOST" value="test.example.com"/>
        <env name="DEPLOYMENT_TEST_SSH_KEY" value="/path/to/test/key"/>
    </php>

    <logging>
        <log type="coverage-html" target="./storage/logs/coverage/deployment"/>
        <log type="coverage-text" target="php://stdout" showUncoveredFiles="false"/>
        <log type="junit" target="./storage/logs/deployment-test-results.xml"/>
    </logging>

    <listeners>
        <listener class="Tests\DeploymentTestListener"/>
    </listeners>
</phpunit>