# Sentry Configuration for Automated Deployment
# Copy these variables to your .env file and update with your actual Sentry DSN

# Sentry DSN - Get this from your Sentry project settings
SENTRY_LARAVEL_DSN=https://your-dsn@sentry.io/project-id

# Sentry Environment - Will be overridden by deployment environment detection
SENTRY_ENVIRONMENT=production

# Sentry Release - Can be set by CI/CD pipeline
SENTRY_RELEASE=

# Error Sampling - 1.0 = 100% of errors, 0.1 = 10% of errors
SENTRY_SAMPLE_RATE=1.0

# Performance Monitoring - 0.1 = 10% of transactions, 0.0 = disabled
SENTRY_TRACES_SAMPLE_RATE=0.1

# Profiling - 0.1 = 10% of transactions, 0.0 = disabled
SENTRY_PROFILES_SAMPLE_RATE=0.0

# Send personally identifiable information (PII)
SENTRY_SEND_DEFAULT_PII=false

# Multi-tenant features
SENTRY_MULTI_TENANT_ENABLED=true

# Performance monitoring features
SENTRY_DATABASE_MONITORING=true
SENTRY_HTTP_MONITORING=true
SENTRY_CACHE_MONITORING=true

# Performance thresholds (in milliseconds)
SENTRY_DB_THRESHOLD=1000
SENTRY_HTTP_THRESHOLD=5000
SENTRY_CACHE_THRESHOLD=100
SENTRY_FILE_THRESHOLD=500

# Breadcrumbs configuration
SENTRY_BREADCRUMBS_SQL_QUERIES=true
SENTRY_BREADCRUMBS_SQL_BINDINGS=false
SENTRY_BREADCRUMBS_QUEUE_INFO=true
SENTRY_BREADCRUMBS_COMMAND_INFO=true

# Enable/disable Sentry entirely
SENTRY_ENABLED=true