# Production Environment Configuration Template
# Copy this file to .env.production and fill in the actual values

# Application Configuration
APP_NAME="Restant"
APP_ENV=production
APP_KEY=                                    # Generate with: php artisan key:generate
APP_DEBUG=false
APP_URL=https://restant.main.susankshakya.com.np

# Database Configuration
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=restant_production
DB_USERNAME=                               # Database username
DB_PASSWORD=                               # Database password (REQUIRED)

# Cache Configuration
CACHE_DRIVER=redis
SESSION_DRIVER=redis
QUEUE_CONNECTION=redis

# Redis Configuration
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# Mail Configuration
MAIL_MAILER=smtp
MAIL_HOST=                                 # SMTP host
MAIL_PORT=587
MAIL_USERNAME=                             # SMTP username
MAIL_PASSWORD=                             # SMTP password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=                         # From email address
MAIL_FROM_NAME="${APP_NAME}"

# Monitoring Configuration (REQUIRED for production)
SENTRY_ENABLED=true
SENTRY_LARAVEL_DSN=                        # Sentry DSN (REQUIRED)
SENTRY_TRACES_SAMPLE_RATE=0.1

FLAGSMITH_ENABLED=true
FLAGSMITH_API_URL=https://flagsmith.susankshakya.com.np/api/v1/
FLAGSMITH_ENVIRONMENT_KEY=                 # Flagsmith environment key (REQUIRED)

GRAFANA_ENABLED=true
GRAFANA_CLOUD_INSTANCE_ID=                 # Grafana Cloud instance ID (REQUIRED)
GRAFANA_CLOUD_API_KEY=                     # Grafana Cloud API key (REQUIRED)

# Deployment Configuration
DOKKU_APP_NAME=restant-main
GIT_BRANCH=main

# Security Configuration
SESSION_SECURE_COOKIE=true
SESSION_SAME_SITE_COOKIE=strict

# Performance Configuration
OPCACHE_ENABLE=1
VIEW_CACHE=true
CONFIG_CACHE=true
ROUTE_CACHE=true

# Logging Configuration
LOG_CHANNEL=stack
LOG_LEVEL=error
LOG_DEPRECATIONS_CHANNEL=null

# Additional Production Settings
TELESCOPE_ENABLED=false
DEBUGBAR_ENABLED=false