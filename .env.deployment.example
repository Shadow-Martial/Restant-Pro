# Deployment Notification Configuration

# Slack Notifications
DEPLOYMENT_SLACK_ENABLED=true
DEPLOYMENT_SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK

# Email Notifications
DEPLOYMENT_EMAIL_ENABLED=true
DEPLOYMENT_EMAIL_RECIPIENTS=dev-team@example.com,ops@example.com

# Webhook Notifications
DEPLOYMENT_WEBHOOK_ENABLED=false
DEPLOYMENT_WEBHOOK_URL=https://your-webhook-endpoint.com/deployment
DEPLOYMENT_WEBHOOK_AUTH_HEADER="Bearer your-auth-token"

# Health Check Configuration
DEPLOYMENT_HEALTH_CHECKS_ENABLED=true
DEPLOYMENT_HEALTH_CHECK_TIMEOUT=30
DEPLOYMENT_HEALTH_CHECK_RETRIES=3

# Rollback Configuration
DEPLOYMENT_ROLLBACK_ENABLED=true
DEPLOYMENT_AUTO_ROLLBACK=true
DEPLOYMENT_MAX_ROLLBACK_ATTEMPTS=3

# Monitoring Services
SENTRY_ENABLED=true
SENTRY_TRACES_SAMPLE_RATE=0.1

FLAGSMITH_ENABLED=true
FLAGSMITH_API_URL=https://flagsmith.susankshakya.com.np/api/v1/

GRAFANA_ENABLED=true
GRAFANA_CLOUD_INSTANCE_ID=your-instance-id